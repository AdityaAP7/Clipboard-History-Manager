{
  "name": "clipboard-manager",
  "version": "0.1.0",
  "main": "main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^9.1.0"
  },
  "devDependencies": {
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.yourname.clipboardmanager",
    "productName": "Clipboard Manager",
    "directories": { "buildResources": "assets" },
    "files": ["**/*", "!node_modules/.cache/**"],
    "win": { "target": "nsis" },
    "mac": { "category": "public.app-category.productivity" },
    "linux": { "target": "AppImage" }
  }
}
